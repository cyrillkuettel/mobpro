<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/yellow"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:text="VERTICAL 01" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:text="VERTICAL 02" />

            <TextView
                android:id="@+id/space1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:text="VERTICAL 03" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@color/blue"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:text="VERTICAL 04" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/yellow"
                    android:layout_weight="1"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:text="HORIZONTAL 01" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/red"
                    android:layout_weight="1"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:text="HORIZONTAL 02" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/green"
                    android:layout_weight="1"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:text="HORIZONTAL 03" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blue"

                    android:layout_weight="1"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:text="HORIZONTAL 04" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</FrameLayout>
